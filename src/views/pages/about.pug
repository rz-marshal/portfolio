extends ../main.layout.pug

block variables
  - var title = 'Обо мне'

block scripts
  script(src='about.bundle.js')

block content
  section.hero
    .hero__links
      ul.socials
        - var socials = ['vk', 'gh', 'in']
        each item in socials
          li.socials__item
            a(href="" class=`socials__link_${item}`).socials__link

    .hero__menu.hamburger

    .hero__container
      .section-title
      .user
        .user__avatar
        .user__info
          .user__name Владислав Маршал
          .user__desc Личный сайт веб-разработчика

    .hero__btn
      .arrow-down

  section.about
    .about__col.about__col_bg_white
      .about__triangle
        svg.svg-triangle.svg-triangle--fill_white
          
      .about__title
        h2.title Обо мне
      .about__desc
        .user-desc
          .user-desc__pic
            img(src="", alt="").user-desc__pic-elem
          .user-desc__info
            h3.user-desc__title
              .subtitle Кто я
            .user-desc__title
              p Lorem ipsum dolor sit amet consectetur, adipisicing elit. Accusantium iure quasi labore provident aperiam a illo soluta dolor dolorum porro!
              p Lorem ipsum dolor sit amet consectetur, adipisicing elit. Accusantium iure quasi labore provident aperiam a illo soluta dolor dolorum porro!

    .about__col.about__col_bg_beige
      .about__triangle
        svg.svg-triangle.svg-triangle--fill_beige
          
      .about__right-title
        .subtitle Кто я
      .about__small-desc
        p Lorem ipsum dolor sit amet consectetur, adipisicing elit. Accusantium iure quasi labore provident aperiam a illo soluta dolor dolorum porro!
      .about__info-container
        ul.skills
          - 
            var skills = [
              ['Frontend', ['html', "css", "JavaScript"]],
              ['Backend', ['Php', "mySql", "Mongo"]],
              ['Workflow', ['Git', "Gulp", "webpack"]]
            ]
          each item in skills
            li.skills__item
              .skills-row
                .skills-row__title #{item[0]}
                ul.skills-row__list
                  each skill in item[1]
                    li.skills-row__item
                      svg.skill #{skill}
  section.contacts
    .contacts__underlay
      .google-map
    .contacts__container
      .user-data
        .user-data__container
          ul.user-contacts-list
            each item in ['skype', 'mail', 'phone']
              li.user-contacts-list__item
                .contacts-cell
                  .contacts-cell__icon
                  .contacts-cell__title #{item}
  footer.footer
    .footer__row.footer__row--border-bottom
      .footer__col
        nav.menu
          ul.menu__list
            each item in ['Мои работы', 'Обо мне', 'Блог', 'Авторизация']
              li.menu__item
                a.menu__link #{item}
      .footer__col.footer__col--justify-right
         ul.socials.socials--rounded-style
          - var socials = ['vk', 'gh', 'in']
            each item in socials
              li.socials__item
                a(href="" class=`socials__link_${item}`).socials__link
    .footer__row
      .footer__col
        .copyright
          p Я веб-разработчик с Дальнего Востока, и этот сайт я сделал в рамках обучения в Школе онлайн
      .footer__col.footer__col--justify-right
        .copyright
          p (c) Владислав Маршал | создано с любовью в LoftSchool | 2018
